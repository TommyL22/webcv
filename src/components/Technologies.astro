---
// filepath: src/components/Technologies.astro
const technologies = [
  { name: "Cisco", img: "/tech/cisco.png", alt: "Python" },
  { name: "Palo Alto", img: "/tech/palto-alto.png", alt: "Palo Alto" },
  { name: "Defender", img: "/tech/defender.png", alt: "Defender" },
  { name: "Rapid7", img: "/tech/rapid7.png", alt: "Rapid7" },
  { name: "Linux", img: "/tech/linux.png", alt: "Linux" },
  { name: "Docker", img: "/tech/docker.png", alt: "Docker" },
  { name: "Python", img: "/tech/python.png", alt: "Python" },
  { name: "Azure", img: "/tech/azure.png", alt: "Azure" },
  { name: "M365", img: "/tech/m365.png", alt: "M365" },
];
---
<section style="margin-top: 4em;">
  <div style="
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.2em;
    justify-items: center;
    align-items: center;
    ">
    {technologies.map(tech => (
      <div style="
        class=tech-card;
        border-radius: 14px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        padding: 0.7em 0.5em;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 160px;
        min-height: 80px;
        transition: transform 0.15s;
      " onmouseover="this.style.transform='scale(1.04)'" onmouseout="this.style.transform='scale(1)'">
        <img src={tech.img} alt={tech.alt} style="max-width: 160px; max-height: 80px; margin-bottom: 0.5em;" />
        <span style="font-size: 1.1em; font-weight: bold; color: #23263a;">{tech.name}</span>
      </div>
    ))}
  </div>
</section>